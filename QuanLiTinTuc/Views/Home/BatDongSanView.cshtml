@model QuanLiTinTuc.Models.TinTuc

@{
    ViewBag.Title = "BatDongSanView";
}

<style>
    .container {
        display: flex;
        width: 680px;
        justify-content: center;
        flex-wrap: wrap;
        margin: auto;
        padding: 0;
        padding-bottom: 30px;
    }

    .title {
        font-size: 32px;
        line-height: 150%;
        font-family: "Merriweather",serif;
        font-weight: bold;
        margin-bottom: 15px;
        margin-top: 20px;
    }

    .container p {
        font-size: 18px;
        line-height: 160%;
        font-weight: 400;
        font-family: Arial;
    }

    .time {
        width: 680px;
        text-align: right;
        margin-top: 20px;
        float: right;
        color: #757575;
        font-size: 16px;
    }
</style>

<div class="container" style="">
    <span class="time">@Model.NgayDang</span>
    <h1 class="title">
        @Model.TieuDe
    </h1>
    @Html.Raw(Model.NoiDung)
    <p style="width: 780px; text-align: right; margin-top: 10px;"><strong>@Model.TacGia</strong></p>

</div>

