            var closeSearch = document.getElementById("closeSearch");

            // Bắt sự kiện khi nhấn Enter trên input
            searchInput.addEventListener("keypress", function (event) {
                if (event.key === "Enter") {
                    event.preventDefault();
                    handleSearch();
                }
            });

            // Bắt sự kiện khi nhấn nút tìm kiếm
