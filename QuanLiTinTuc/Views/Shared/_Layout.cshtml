    <script>
        // Hàm kiểm tra đường dẫn và áp dụng class "active" cho thẻ tương ứng
        function setActiveLink() {
            var currentPath = window.location.pathname + window.location.search;
            // Lấy danh sách tất cả các thẻ a trong navbar
            var navLinks = document.querySelectorAll('.nav-link');

            // Xóa class 'active' từ tất cả các thẻ a
            navLinks.forEach(function (navLink) {
                navLink.classList.remove('active');

                // Kiểm tra nếu đường dẫn của thẻ a trùng với đường dẫn hiện tại
                if (navLink.getAttribute('href') === currentPath) {
                    navLink.classList.add('active');
                }
            });
        }
        window.addEventListener('load', setActiveLink);
        window.addEventListener('popstate', setActiveLink);
    </script>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
